<% if current_user %>
  <div class="container">
    <h4><%= link_to "Create a new task", "/events/new" %> </h4>
    <br>
    <h4><%= link_to "Add Google events", "/google_events" %> </h4>
    <br>
    <h4><%= link_to "Slot in your tasks", "/add_tasks" %> </h4>
    <br>
    <h4><%= link_to "View your tasks", "/see_tasks" %></h4>
    <br>
    <h4><%= link_to "Delete all events", "/delete_all_events", data: { confirm: "Are you sure you want to delete all events?"} %></h4>


    <h1> Here is your agenda for today! </h1>
    <table class="blah hero-unit center table table-striped">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th>Title</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
          <p> <% @events.each do |t| %> </p>
          <% if t.task == false %>
            <tr>
              <td> <%= link_to "Delete", "/events/#{t.id}", method: 'delete', data: { confirm: "Are you sure you want to delete this comment?" } %></td>
              <td> <%= link_to "Edit", "/events/#{t.id}/edit" %></td>
              <td><%= link_to "More info", "/events/#{t.id}" %></td>
              <td> <%= t.title %> </td>
              <td> <%= t.start.strftime("%I:%M %p, %m-%d-%Y") %> </td>
              <td> <%= t.end.strftime("%I:%M %p, %m-%d-%Y") %> </td>
              <td> <%= t.notes %> </td>
            </tr>
            <% end %>
          <p> <% end %> </p>
      </tbody>
    </table>

  <% else %>
    <h1>Welcome!</h1>
    <h1>Please sign in below to get started!</h1>
    <br>
    <br>
    <h1><%= link_to "Sign in with Google +", "auth/google_oauth2" %></h1>
  <% end %>
  </div>

  <%= debug @google %>

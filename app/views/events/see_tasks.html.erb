
<h1>Welcome to Scheduler!</h1>
<p class="center">Step 1: Create all of your tasks.* </p>
<p class="center">Step 2: <%= link_to "Click here to see today's schedule", "/google_events" %> </p>
<p class="center">* NOTE: If you want to see just today's events and your free time, don't create any tasks.</p>


<div>
    <div class="span4">
      <div class="center ">
        <h3 class="center">Create a new task</h3>
        <p>* Required</p>
          <%= form_tag "/see_tasks/" do %>
            <p>
              <%= label_tag :title, " * Title" %>
              <%= text_field_tag :title, "", placeholder: "Write the title here" %>
            </p>
            <p>
              <%= label_tag :priority, " * Priority" %>
              <%= select_tag :priority, options_for_select(["1 = High", "2 = Medium", "3 = Low"], "1 = High") %>
            </p>
            <p>
              <%= label_tag :duration, " * Duration in minutes" %>
              <%= text_field_tag :duration, "", size: 80, placeholder: "e.g. 60" %>
            </p>
            <p>
              <%= label_tag :due, "(Optional) Due date e.g. 2013-05-28T15:11:00-0500" %>
              <%= text_field_tag :due, "", size: 80, placeholder: "e.g. 2013-05-28T15:11:00-500" %>
            </p>
            <p>
              <%= label_tag :notes, "(Optional) Notes" %>
              <%= text_field_tag :notes, "", size: 80, placeholder: "Write any notes" %>
            </p>
            <%= submit_tag "Create a New Task" %>
          <% end %>
      </div>
    </div>

    <div class="span8">
    <h3 class="center"> Your Tasks  </h3>
    <h4><%= link_to "Delete all tasks", "/delete_all_tasks" %></h4>
      <table class=" center table table-striped">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th>Title</th>
            <th>Priority</th>
            <th>Duration</th>
            <th>Due Date</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
            <p> <% @events.each do |t| %> </p>
            <% if t.task == true %>
                <tr>
                  <td> <%= link_to "Delete", "/events/#{t.id}", method: 'delete', data: { confirm: "Are you sure you want to delete this comment?" } %></td>
                  <td> <%= link_to "Edit", "/events/#{t.id}/edit" %></td>
                  <td> <%= t.title %> </td>
                  <td> <%= t.priority %> </td>
                  <td> <%= t.duration %> </td>
                  <td> <%= t.due %> </td>
                  <td> <%= t.notes %> </td>
                </tr>
            <% end %>
            <p> <% end %> </p>
        </tbody>
      </table>

    </div>
</div>
<br>

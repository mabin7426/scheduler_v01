<p><%= link_to "Back", "/events" %></p>
<br>
<br>
<h4><%= link_to "Create a new task", "/events/new" %> </h4>
<h4><%= link_to "Delete all tasks", "/delete_all_tasks" %></h4>

<h1> Your Tasks </h1>
  <table class="blah hero-unit center table table-striped">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>Title</th>
        <th>Priority</th>
        <th>Duration</th>
        <th>Due Date</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
        <p> <% @events.each do |t| %> </p>
        <% if t.task == true %>
            <tr>
              <td> <%= link_to "Delete", "/events/#{t.id}", method: 'delete', data: { confirm: "Are you sure you want to delete this comment?" } %></td>
              <td> <%= link_to "Edit", "/events/#{t.id}/edit" %></td>
              <td> <%= t.title %> </td>
              <td> <%= t.priority %> </td>
              <td> <%= t.duration %> </td>
              <td> <%= t.due %> </td>
              <td> <%= t.notes %> </td>
            </tr>
        <% end %>
        <p> <% end %> </p>
    </tbody>
  </table>
